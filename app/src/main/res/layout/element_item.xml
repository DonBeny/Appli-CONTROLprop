<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="15dp"

    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/_dark_grey"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView android:id="@+id/element_item_text_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"

            android:padding="10dp"

            android:textSize="20sp"
            android:text="@string/_element" />

        <TextView android:id="@+id/element_item_note_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"

            android:gravity="center_vertical"
            android:background="@drawable/ctrl_note_grey"

            android:textAlignment="center"
            android:textSize="20sp"
            android:text="@string/txt_so" />

    </LinearLayout>

    <LinearLayout android:id="@+id/element_item_grill_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_marginLeft="10dp" >
    </LinearLayout>

</LinearLayout>